{
  "include": [
    "./src"
  ],
  "compilerOptions": {
    // "emitDeclarationOnly": true, // 只输出声明文件(ts 产物)
    // "declaration": true, // 自动生成声明文件
    // "declarationDir": "declaration", // 声明文件生成的目录
    "noEmit": true,
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./node_modules/vue/dist/vue.d.ts",
      "./node_modules/idb-keyval/dist/index.d.ts"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ventose/ui": [
        "./src/ui/index.tsx"
      ]
    }
  }
}